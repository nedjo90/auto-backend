{
  "name": "auto-backend",
  "version": "1.0.0",
  "description": "Auto platform backend - SAP CAP with TypeScript",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@auto/shared": "file:../auto-shared",
    "@azure/identity": "^4.13.0",
    "@cap-js/postgres": "^1.14.2",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@sap/cds": "^8",
    "express": "^4",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^29",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "typescript-eslint": "^8.54.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds-tsx w",
    "build": "cds build --production",
    "lint": "eslint --no-error-on-unmatched-pattern srv/ test/",
    "format": "prettier --write srv/ db/ test/",
    "format:check": "prettier --check srv/ db/ test/",
    "type-check": "cds build",
    "test": "jest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --no-error-on-unmatched-pattern",
      "prettier --write"
    ]
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql",
        "impl": "@cap-js/sqlite"
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "admin": {
            "password": "",
            "roles": ["administrator", "authenticated-user"]
          },
          "user": {
            "password": "",
            "roles": ["authenticated-user"]
          }
        }
      }
    },
    "[production]": {
      "requires": {
        "db": {
          "kind": "postgres",
          "impl": "@cap-js/postgres"
        }
      }
    },
    "typer": {
      "output_directory": "@cds-models"
    }
  }
}
